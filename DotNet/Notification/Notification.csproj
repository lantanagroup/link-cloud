  <ItemGroup>
    <PackageReference Include="AspNetCore.HealthChecks.UI.Client" Version="8.*" />
    <PackageReference Include="Azure.Identity" Version="1.*" />
    <PackageReference Include="Grpc.AspNetCore" Version="2.*" />
