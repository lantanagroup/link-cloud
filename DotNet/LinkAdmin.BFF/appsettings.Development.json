{
  "ExternalConfigurationSource": "",
  "SecretManagement": {
    "Enabled": true,
    "Manager": "AzureKeyVault",
    "ManagerUri": ""
  },
  "ServiceInformation": {
    "Name": "Link Admin BFF",
    "Version": "0.1.0"
  },
  "GatewayConfig": {
    "AccountServiceApiUrl": "http://localhost:7221"
  },
  "KafkaConnection": {
    "BootstrapServers": []
  },
  "EnableSwagger": true,
  "EnableIntegrationFeature": true,
  "LinkBearerService": {
    "EnableTokenGenrationEndpoint": true,
    "LinkAdminEmail": "linkadmin@lantanagroup.com"
  },
  "Authentication": {
    "EnableAnonymousAccess": false,
    "DefaultScheme": "link_cookie",
    "DefaultChallengeScheme": "link_oauth2",
    "Schemas": {
      "Jwt": {
        "Enabled": true,
        "Authority": "",
        "Audience": "",
        "NameClaimType": "email",
        "RoleClaimType": "roles",
        "ValidTypes": [ "at+jwt", "JWT" ]
      },
      "Oauth2": {
        "Enabled": true,
        "CallbackPath": "/signin-oauth2"
      },
      "OpenIdConnect": {
        "Enabled": false,
        "Authority": "",
        "CallbackPath": "/signin-oidc",
        "NameClaimType": "email",
        "RoleClaimType": "roles"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "TelemetryConfig": {
    "EnableRuntimeInstrumentation": false,
    "TraceExporterEndpoint": "",
    "MetricsEndpoint": "",
    "TelemetryCollectorEndpoint": "http://localhost:55690"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "labels": [
            {
              "key": "app",
              "value": "Link-BoTW"
            },
            {
              "key": "component",
              "value": "AdminBFF"
            }
          ],
          "propertiesAsLabels": [ "app", "component" ]
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
