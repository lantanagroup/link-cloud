{
  "ExternalConfigurationSource": "",
  "KafkaConnection": {
    "BootstrapServers": [ "localhost:9092/" ],
    "ClientId": "audit-events"
  },
  "DatabaseProvider": "SqlServer",
  "ConnectionStrings": {
    "DatabaseConnection": "Data Source;Initial;Integrated Security=True;",
    "AzureAppConfiguration": ""
  },
  "CORS": {
    "AllowAllOrigins": true,
    "AllowedOrigins": [ "http://localhost:5218", "http://localhost:4200" ],
    "AllowAllMethods": false,
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowAllHeaders": false,
    "AllowedHeaders": [ "Authorization", "Content-Type", "Accept", "Origin", "Access-Control-Allow-Origin", "User-Agent", "X-Requested-With" ],
    "AllowedExposedHeaders": [ "X-Pagination" ],
    "AllowCredentials": true,
    "MaxAge": 600
  },
  "Authentication": {
    "EnableAnonymousAccess": false,
    "Schemas": {
      "LinkBearer": {
        "Authority": "https://localhost:7004",
        "ValidateToken": true
      }
    }
  },
  "LinkTokenService": {
    "Authority": "https://localhost:7004",
    "LinkAdminEmail": "linkadmin@lantanagroup.com",
    "TokenLifespan": 10
  },
  "Telemetry": {
    "EnableTelemetry": true,
    "EnableRuntimeInstrumentation": false,
    "InstrumentEntityFramework": true,
    "EnableOtelCollector": true,
    "OtelCollectorEndpoint": "http://localhost:55690",
    "EnableAzureMonitor": false
  },
  "EnableSwagger": true,
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "http": {
        "Url": "http://localhost:7344"
      },
      "https": {
        "Url": "https://localhost:7355"
      }
    }
  },
  "ProblemDetails": {
    "IncludeExceptionDetails": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": true,
        "JsonWriterOptions": {
          "Indented": true
        }
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "labels": [
            {
              "key": "app",
              "value": "link-cloud"
            },
            {
              "key": "component",
              "value": "Audit"
            }
          ],
          "propertiesAsLabels": [ "app", "component" ]
        }
      }
    ]
  }
}
