{
  "Link:Notification:ExternalConfigurationSource": "",
  "Link:Notification:ServiceInformation": {
    "Name": "Link Notification Service",
    "Version": "0.3.0"
  },
  "Link:Notification:ServiceRegistry": {
    "TenantServiceApiUrl": "http://localhost:7331"
  },
  "Link:Notification:KafkaConnection": {
    "BootstrapServers": [],
    "ClientId": "",
    "GroupId": ""
  },
  "Link:Notification:DatabaseProvider": "SqlServer",
  "Link:Notification:SmtpConnection": {
    "Host": "",
    "Port": "",
    "EmailFrom": "",
    "UseBasicAuth": false
  },
  "Link:Notification:Channels": {
    "IncludeTestMessage": true,
    "TestMessage": "[!** This is a TEST notification, please disregard **!]",
    "SubjectTestMessage": "[!** TEST Notification **!]",
    "Email": true
  },
  "Link:Notification:IdentityProviderConfig": {
    "Issuer": "",
    "Audience": "",
    "NameClaimType": "email",
    "RoleClaimType": "roles",
    "ValidTypes": [ "at+jwt", "JWT" ]
  },
  "Link:Notification:TelemetryConfig": {
    "EnableRuntimeInstrumentation": false,
    "TraceExporterEndpoint": "http://localhost:4317/",
    "MetricsEndpoint": "http://localhost:9101",
    "TelemetryCollectorEndpoint": "http://localhost:55690"
  },
  "Link:Notification:AllowReflection": true,
  "Link:Notification:EnableSwagger": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "AllowedHosts": "*",  
  "Link:Notification:Logging:Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "labels": [
            {
              "key": "app",
              "value": "Link-BoTW"
            },
            {
              "key": "component",
              "value": "Notification"
            }
          ],
          "propertiesAsLabels": [ "app", "component" ]
        }
      }
    ]
  }
}
