<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <springProperty scope="context" name="loki_enabled" source="loki.enabled"/>
    <springProperty scope="context" name="loki_url" source="loki.url"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <if condition='property("loki_enabled").equalsIgnoreCase("true")'>
        <then>
            <appender name="LOKI" class="com.lantanagroup.link.shared.logging.DelayedHttpAppender">
                <http>
                    <url>${loki_url}/loki/api/v1/push</url>
                </http>
                <format>
                    <label>
                        <pattern>app=link-cloud,component=MeasureEval,TraceId="%X{traceId}",SpanId="%X{spanId}"</pattern>
                        <readMarkers>true</readMarkers>
                    </label>
                    <message>
                        <pattern>
                            {
                            "level":"%level",
                            "class":"%logger{36}",
                            "thread":"%thread",
                            "message":"%message",
                            "requestId":"%X{X-Request-ID}",
                            "TraceId":"%X{traceId}",
                            "SpanId":"%X{spanId}",
                            }
                        </pattern>
                    </message>
                </format>
                <batchMaxItems>25</batchMaxItems>
            </appender>
        </then>
    </if>

    <if condition='property("loki_enabled").equalsIgnoreCase("true")'>
        <then>
            <logger name="com.lantanagroup.link.measureeval.services" level="WARN"/>
            <root level="WARN">
                <appender-ref ref="STDOUT"/>
                <appender-ref ref="LOKI"/>
            </root>

        </then>
        <else>
            <logger name="com.lantanagroup.link.measureeval.services" level="WARN"/>
            <root level="WARN">
                <appender-ref ref="STDOUT"/>
            </root>
        </else>
    </if>
</configuration>
