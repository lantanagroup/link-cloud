{
  "KafkaConnection": {
    "BootstrapServers": [ "localhost:9092" ],
    "ClientId": "",
    "GroupId": ""
  },
  "MongoDB": {
    "ConnectionString": "",
    "DatabaseName": "botw-report",
    "CollectionName": ""
  },
  "ServiceInformation": {
    "Name": "Link Report Service",
    "Version": "1.1.0-beta"
  },
  "TelemetryConfig": {
    "TraceExporterEndpoint": "http://localhost:4317/",
    "MetricsEndpoint": "http://localhost:9101",
    "TelemetryCollectorEndpoint": "http://localhost:4317"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowReflection": true,
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "GrafanaLoki",
        "Args": {
          "labels": [
            {
              "key": "app",
              "value": "Link"
            },
            {
              "key": "component",
              "value": "Report"
            }
          ],
          "propertiesAsLabels": [
            "app",
            "component"
          ]
        }
      },
      {
        "Name": "Console"
      }
    ]
  },
  "TenantApiSettings": {
    "TenantServiceBaseEndpoint": "https://localhost:7332/api/",
    "CheckIfTenantExists": true,
    "GetTenantRelativeEndpoint": "facility/"
  }
}
